[module/player-mpris-tail]
;type = custom/script
;icon-prev = ‚è™ 
;icon-stop = ‚óº
;icon = ‚ñ∂ 
;icon-pause = ‚ñÆ‚ñÆ
;icon-next = ‚è©
;type = custom/script
;exec = ~/.config/polybar/player-mpris-tail.py -f '{icon} {artist} - {title}'
;tail = true
;label = ‚ô´ %output%
;click-left = ~/.config/polybar/player-mpris-tail.py previous
;click-right = ~/.config/polybar/player-mpris-tail.py next
;click-middle = ~/.config/polybar/player-mpris-tail.py play-pause

[module/player-mpris-tail]
type = custom/script
exec = $HOME/.config/polybar/player-mpris-tail.py -f '{icon} {:artist:t18:{artist}:}{:artist: - :}{:t20:{title}:}  %{A1:~/.config/polybar/player-mpris-tail.py previous:}<~%{A} %{A1:~/.config/polybar/player-mpris-tail.py play-pause:} {icon-reversed} %{A} %{A1:~/.config/polybar/player-mpris-tail.py next:}~>%{A}' --icon-none=~ --icon-playing=‚ô´ --icon-paused=‚ñÆ‚ñÆ
tail = true
label = %output%

