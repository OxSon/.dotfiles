;Added Modules

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = ⏪ 
icon-stop = ◼
icon-play = ▶ 
icon-pause = "▮▮"
icon-next = ⏩

label-song-maxlen = 25
label-song-ellipsis = true

[module/player-mpris-tail]
type = custom/script
exec = $HOME/.config/polybar/player-mpris-tail.py -f '{icon} {:artist:t18:{artist}:}{:artist: - :}{:t20:{title}:}  %{A1:~/.config/polybar/player-mpris-tail.py previous:}<~%{A} %{A1:~/.config/polybar/player-mpris-tail.py play-pause:} {icon-reversed} %{A} %{A1:~/.config/polybar/player-mpris-tail.py next:}~>%{A}' --icon-none=~ --icon-playing=♫ --icon-paused=▮▮
tail = true
label = %output%

[module/updates-arch-combined]
type = custom/script
exec = ~/.config/polybar/updates-arch-combined.sh
interval = 600

[module/taskwarrior]
interval = 5
type = custom/script
exec = $HOME/.config/polybar/task_polybar.sh
format = <label>
format-prefix = " "
click-left = task "$((`cat /tmp/tw_polybar_id`))" done

[module/tdrop]
type = custom/ipc
hook-0 = tdrop -a -w 30% -x 70% -y 3% alacritty
hook-1 = echo ""
click-left = polybar-msg hook tdrop 1
initial = 2

;####End Added Modules###

